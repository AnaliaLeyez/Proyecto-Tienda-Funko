<section class="slider container glide">
    <h2 class="slider__title"><%= slider.title %></h2>
    <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
            <% items.forEach(item =>{ %>
                <li class="slider__item glide__slide">
                <article class="card-item">
                    <a class="card-item__link" href="/shop/item/<%=item.item_id%>">
                        <picture class="card-item__cover">
                            <span class="card-item__tag">Nuevo</span>
                            <img class="card-item__img--front" src="/img/<%= item.img_front %>"
                                alt="<%= item.description %>">
                            <img class="card-item__img--back" src="/img/<%= item.img_back %>"
                                alt="<%= item.description %>">
                        </picture>
                        <div class="card-item__content">
                            <p class="card-item__license"><%= item.licence %></p>
                            <h4 class="card-item__name"><%= item.name %></h4>
                            <p class="card-item__price"><%= item.price %></p>
                            <p class="card-item__promo"><%= item.dues %>  CUOTAS SIN INTERÃ‰S</p>
                        </div>
                    </a>
                </article>
            </li>
            <% }); %>

  
        </ul>
    </div>
    <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
            <iconify-icon icon="tabler:chevron-left"></iconify-icon>
        </button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
            <iconify-icon icon="tabler:chevron-right"></iconify-icon>
        </button>
      </div>
</section>