<%- include('../partials/header') %>

    <main id="cart" class="container">
        <h2 class="cart__title">CARRITO DE COMPRAS</h2>

        <section class="cart__details">
            <ul class="cart__details-list">
                <li>DETALLE DEL PRODUCTO</li>
                <li>CANTIDAD</li>
                <li>TOTAL</li>
            </ul>
        </section>
        <section class="cart__items">
            <article class="cart__item">
                <div class="cart__item__info">
                    <picture class="cart__item-img">
                        <img src="../../img/star-wars/baby-yoda-1.webp"
                            alt="Figura coleccionable Funko de Grogu de la serie The Mandalorian">
                    </picture>
                    <div>
                        <h3>BABY YODA BLUEBALL</h3>
                        <p>STAR WARS</p>
                        <p>precio: $ 1799,99</p>
                    </div>
                </div>
                <div>
                    <input type="number" id="amount" name="amount">
                    <button>+</button>
                    <button>-</button>
                </div>
                <span>$3599,98</span>
                <img class="cart__item-delete" src="../../img/icons/delete_trash.svg">
            </article>
            <article class="cart__item">
                <div class="cart__item__info">
                    <picture class="cart__item-img">
                        <img src="../../img/pokemon/pidgeotto-1.webp"
                            alt="Figura coleccionable Funko de Pidgeotto de Pokemon">
                    </picture>
                    <div>
                        <h3>PIDGEOTTO</h3>
                        <p>POKEMON</p>
                        <p>precio unitario: $ 1799,99</p>
                    </div>
                </div>
                <div>
                    <input type="number" id="amount" name="amount">
                    <button>+</button>
                    <button>-</button>
                </div>
                <span>$1799,99</span>
                <img class="cart__item-delete" src="../../img/icons/delete_trash.svg">
            </article>
        </section>

        <section class="cart__overview">
            <h2  class="cart__title cart__title-overview">RESUMEN</h2>
            <div class="cart__details">
                <p>CANTIDAD DE ELEMENTOS</p>
                <p>SUBTOTAL</p>
                <p>ENVIO</p>
                <p>TOTAL</p>
            </div>
            <h3 class="cart__checkout">IR A PAGAR</h3>
        </section>
    </main>

    <%- include('../partials/footer') %>