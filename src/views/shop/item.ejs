<%- include('../partials/header') %>

    <main class="container">
        <section class="item">
            <picture class="item__img card-item__cover">
                <img class="card-item__img--front" src="/img<%=item.img_front%>"
                    alt="Figura coleccionable Fuko de Grogu de la serie The Mandalorian">
                <img class="card-item__img--back" src="/img<%=item.img_back%>"
                    alt="Figura coleccionable Fuko de Grogu de la serie The Mandalorian en caja">
            </picture>
            <article class="item__info">
                <p class="item__license"><%=item.licence%></p>
                <h3 class="item__name"><%=item.name%></h3>
                <p class="item__description"><%=item.description%></p>
                <p class="item__price"><%=item.price%></p>
                <div class="item__cart">
                    <button id="subtract" class="item__quantity" type="button">-</button>
                    <input class="item__input" type="text" name="quantity" id="quantity" placeholder="0">
                    <button id="add" class="item__quantity" type="button">+</button>
                    <button class="item__submit btn btn--primaty btn--medium" type="submit">Agregar al Carrito</button>
                </div>
                <p class="item__promo">
                    <a href="">Ver métodos de pago</a>
                    - <%=item.dues%> CUOTAS SIN INTERÉS
                </p>
            </article>
        </section>

        <section class="slider container glide">
            <%- include('../components/slider') %>
        </section>
    </main>

    <%- include('../partials/footer') %>