<%- include('../partials/header') %>

<body>    
    <main id="shop" class="container">
    <aside class="shop__filters"> <!--Inicio Aside-->
            <div class="aside__menu">
                <label class="shop__filters_title" for="search">BUSCAR</label>
                <input type="text"  name="search" id="search" placeholder="item o categoria">
            </div>
            <div>
                <label class="shop__filters_title" for="orderby">ORDENAR POR</label>
                <select name="orderby" id="orderby">
                <option selected value="Desc">Mayor a menor</option>
                <option value="asc">Menor a mayor</option>
                <option value="az">A-Z</option>
                <option value="za">Z-A</option>
            </select>
            </div>
            <div>
                <span class="shop__filters_title">PRECIO</span>
                <label for="min">
                    MIN
                    <input type="text" name="min" id="min" placeholder="0">
                </label>
                <label for="max">
                    - MAX
                    <input type="text" name="max" id="max" placeholder="0">
                </label>
            </div>
            <div class="filter">
                <span class="shop__filters_title" for="filter">FILTRAR</span>
                
                <label for="news">
                    <input type="checkbox" name="filter" id="news"  value="nuevos">
                    NUEVOS
                </label>
                <label for="offers">
                    <input type="checkbox" name="filter" id="offers"  value="ofertas">
                    OFERTAS
                </label>
                <label for="specialEdition">
                    <input type="checkbox" name="specialEdition" id="specialEdition" value="edicion especial">
                    EDICIÓN ESPECIAL
                </label>
                <label for="favorites">
                    <input type="checkbox" name="favorites" id="favorites" value="favoritos">
                    FAVORITOS
                </label>
            </div>
        
    </aside> <!--Fin Aside-->

        <section class="shop__content">
            <ul class="shop__items">
                <% items.forEach(item => { %>
                <li class="shop__item">
                    <article class="card-item">
                        <a class="card-item__link" href="/shop/item/<%= item.item_id %>">
                            <picture class="card-item__cover">
                                <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="/img<%= item.img_front %>" alt="<%= item.description %>">
                                <img class="card-item__img--back" src="/img<%= item.img_back %>" alt="<%= item.description %> En caja">
                                </picture>
                            <div class="card-item__content">
                                <p class="card-item__license"><%= item.licence %></p>
                                <h4 class="card-item__name"><%= item.name %></h4>
                                <p class="card-item__price"><%= item.price %></p>
                                <p class="card-item__promo"><%= item.dues %> CUOTAS SIN INTERÉS</p>
                            </div>
                        </a>
                    </article>
                </li>
                <% });  %>
            </ul>    
            
            <div class="pagination">
                <a class="pagination__link" href="#"><</a>
                <a class="pagination__link pagination__link--selected" href="#">1</a>
                <a class="pagination__link" href="#">2</a>
                <a class="pagination__link" href="#">3</a>
                <a class="pagination__link" href="#">4</a>
                <a class="pagination__link" href="#">5</a>
                <a class="pagination__link" href="#">></a>
            </div>
        </section>

    </main>

    <%- include('../partials/footer') %>